<view class="container">

  <!-- 用户 openid -->
  <view class="userinfo" wx:if="{{uniqueOne}}">
    <button open-type="getUserInfo" bindgetuserinfo="onGetUserInfo" class="userinfo-avatar"
      style="background-image: url({{avatarUrl}})" size="default"></button>
    <view class="userinfo-nickname-wrapper">
      <h2 class="userinfo-nickname">请设置您的经期数据</h2>
    </view>
  </view>
  <view class="printDiv" wx:if="{{uniqueOne}}">
    <form class="printForm" bindsubmit="toConfig" bindreset="formReset">
      <view class="section__title">
        经期
      </view>
      <view class="section__p">
        <h3>您的月经大概持续几天</h3>
      </view>
      <input class='printInput' name="continue" value="6天" />
      <view class="section__title">
        周期
      </view>
      <view class="section__p">
        <h3>两次月经开始日期间隔多久</h3>
      </view>
      <input class='printInput' name="interval" value="28天" />
      <view class="btn-area">
        <button formType="submit" class="settingButton">确认</button>
        <button formType="reset" class="settingButton">清空</button>
      </view>
    </form>
  </view>

  <view class="warningModal" wx:if="{{!hideAvatar}}">
    <view class="modalAvatar">
      <view class="bg-img"
        style="background-image: url(http://m.qpic.cn/psc?/d792ad94-b177-4e25-a377-164cd4c4031f/TmEUgtj9EK6.7V8ajmQrEM.vat4FRqCUh0R7yg6YMij5s2YZGIsCA.jbNsuT9bNlijPThBp*kF7BG1OmVm3*rdqHZkUvYfl0g44lWVLpkwk!/b&bo=XwE5Al8BOQIDKQw!&rf=viewer_4);height:450px;width:350px;">
        <view class="cu-bar justify-end text-white">
          <view class="action" bindtap="hideModal">
            <text class="cuIcon-close "></text>
          </view>
        </view>
      </view>
    </view>
    <view class="uploader-text" bindtap="hideAvatar">
      <text>I know!</text>
    </view>
  </view>




