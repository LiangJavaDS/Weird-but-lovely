/**index.wxss**/
page {
  background: #FA7080;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.printDiv {
  margin-top: 120rpx;
  height: 640rpx;
  width: 70%;
  border-radius: 10%;
  background: white;
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
}

.printForm {
  height: 500rpx;
  width: 80%;
  border-radius: 10%;
  margin-left: 55rpx;
  display: flex;
  justify-content: center;
  transition: all 300ms ease;
}

.userinfo {
  padding-left: 120rpx;
  background-color: #FA7080;
}

/* 头像的背景 */
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

/* 头像的宽度 */
.userinfo-avatar[size] {
  width: 100rpx;
}

/* 头部文字的背景色 */
.userinfo-nickname {
  font-size: 32rpx;
  color: white;
  background-color: #FA7080;
  background-size: cover;
  text-align: center;
  padding-left: 0;
  margin-left: 60px;
}

.userinfo-nickname-wrapper {
  flex: 1;
}

.section__title {
  font-size: 32rpx;
  display: inline;
}

.section__p {
  font-size: 28rpx;
  display: inline;
  color: #747474;
  margin: auto;
}

.printInput {
  border: 1rpx solid black;
  border-radius: 8px;
  height: 65rpx;
}

.settingButton {
  display: inline;
}

.btn-area {
  display: inline;
  margin: 18px;
}

.uploader-text,
.tunnel-text {
  text-align: center;
  width: 100%;
  line-height: 52px;
  font-size: 50rpx;
  color: white;
}

input {
  margin-top: 15px;
  margin-bottom: 15px;
  text-align: center;
  color: black;
}